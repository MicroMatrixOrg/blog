/* 上面是整体布局 */


/*下面顶部信息栏*/

.header {
	width: 100%;
	height: 70px;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 22;
	// background: #5ca8e7;
	background-color:#fff;
	background-image:linear-gradient(143deg,#6c91f0 45%,#7863b4 81%,#7a5aa9)
}

.header .header-logo {
	width: 200px;
	height: 100%;
	float: left;
	position: relative
}

.header .header-logo-title {
	margin-left: 32px;
	position: relative;
	//top: 20px
}

.header .header-logo-title .logo-box {
	// background: url(../img/logo.png) no-repeat;
	// // width: 250px;
    // width: 770px;
    // height: 180px;
    // position: absolute;
    // transform: scale(0.6);
    // top: -25px;
    // left: -173px;
}

.header .header-aside {
	float: right;
	margin: 0 30px 0 0;
	position: relative;
	color: #fff;
	font-size: 14px
}

.header .header-aside .aside-box {
	margin: 26px 0 22px
}

.header .header-aside .aside-box .icon-box {
	width: 34px;
	font-size: 18px;
	color: #fff;
	text-align: center
}

.header .header-aside .aside-box a {
