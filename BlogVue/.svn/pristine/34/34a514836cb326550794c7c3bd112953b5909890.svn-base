}

.header .header-aside p {
	float: left;
	color: #fff;
	padding-right: 10px;
	font-size: 14px
}

/*上面顶部信息栏*/


/* 下面是左侧导航栏 */
.menu_header {
	height: 54px;
	line-height: 54px;
	background: #3e485a;
	font-size: 16px;
	font-weight: 400;
	text-align: center;
	width: 200px;
	color: #FFFFFF;
}

.ivu-menu {
	width: 200px !important;
}

.ivu-menu a {
	color: #495060;
}

.ivu-menu-item {
	border-bottom: 1px solid #a5adbf;
}

.ivu-menu-submenu-title {
	border-bottom: 1px solid #a5adbf;
	padding-left: 35px !important;
}

.ivu-menu-item:not(.ivu-menu-submenu) {
	padding-left: 35px;
	background: #8791a5;
	color: #ffffff;
}
.ivu-menu-submenu {
	background: #8791a5;
	color: #ffffff;
}
.ivu-menu-item-active:not(.ivu-menu-submenu) {
	color: #000000;
}

.ivu-menu-submenu .ivu-menu-item {
	padding-left: 50px !important;
}

.ivu-menu-item:hover {
	color: #000000 !important;
	background: #fff;
	border-left: 4px solid #5DA9E7;
}

.ivu-menu-submenu-title:hover {
	color: #000000;
	border-left: 4px solid #5DA9E7;
}

.ivu-menu-item-selected {
	border-right: 0px !important;
	background: #f3f3f3 !important;
}
.ivu-menu-item-active:not(.ivu-menu-submenu):after{
	background:#ffffff !important;
}

/* 上面是左侧导航栏 */


/* 下面是主体顶上的路径栏 */

.path-nav {
	position: absolute;
	z-index: 21;
	top: 0px;
	left: 0px;
	right:0px;
	height: 49px;
	box-shadow: 0 1px 1px 0 rgba(0, 0, 0, .1);
	background: #fff;
	width: 100%;
	padding: 0 15px;
	box-sizing: border-box;
	min-width: 767px;
}

.path-nav h1 {
	float: left;
	font-size: 16px;
	color: #999999;
	margin: auto;
	line-height: 56px;
	font-weight: 400
}

.path-nav .ivu-icon {
	font-size: 18px;
	padding-right: 7px;
}

/* 上面是主体顶上的路径栏 */
