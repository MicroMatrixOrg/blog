/* 下面是整体布局 */
* {
	font-size: 10pt;
	font-family: '微软雅黑';
	border: 0;
	margin: 0;
	padding: 0;
}
html
{
  height: 100%;
}
body {
	margin: 0;
	padding: 0;
	height: 100%;
	overflow: hidden;
}
div {
	box-sizing: border-box;
}
.layout {
	box-sizing: border-box;
	padding-top: 70px;
	height: 100%;
}
.layout-top {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 70px;
	min-width: 800px;
}
.layout-bd {
	position: relative;
	padding-left: 200px;
	height: 100%;
}
.layout-bd-left {
	position: absolute;
	left: 0;
	top: 0;
	bottom: 0;
	width: 200px;
	box-shadow: 1px 3px 10px 0px #888888;
	background: #8791a5;
	z-index: 999;
	overflow-x: hidden;
	overflow-y: auto;
}
.layout-bd-right {
	overflow: hidden;
	position: relative;
	height: 100%;
}
.layout-main {
	width:100%;
	height:100%; 
	overflow: auto;
}
.main_container {
	width: 100%;
	height: 100%;
	padding-top: 50px;
}
.main-bd {
	position: relative;
	height:100%;
	height:100%;
	overflow: auto;
	//scrollbar-width: none;
}

