<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luobo.mapper.BlogMapper">

   <resultMap id="BlogUserMap" type="com.luobo.entity.BlogUser">
       <result property="id" column="id" />
       <result property="userId" column="user_id" />
       <result property="title" column="title" />
       <result property="description" column="description" />
       <result property="created" column="created" />
       <result property="status" column="status" />
       <result property="username" column="username" />
   </resultMap>



    <select id="findBlogs" resultMap="BlogUserMap" >
        SELECT b.id,b.user_id,b.title,b.description,b.created,b.status,u.username FROM m_blog b LEFT JOIN m_user u on b.user_id = u.id ${ew.customSqlSegment}
    </select>

    <select id ="findBlogsByUserId" resultMap="BlogUserMap">
        SELECT b.id,b.user_id,b.title,b.created FROM m_blog b
        <where>
            b.user_id = #{userId}
        </where>

    </select>


</mapper>
